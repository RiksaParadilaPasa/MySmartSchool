<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.Main2Activity"
    android:orientation="vertical"
    android:background="#fff">


    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

                <Button
                    android:id="@+id/btnAdminAdmin"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:text="ADMIN"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:textSize="35sp"
                    android:layout_margin="20dp"
                    android:background="@drawable/bg_home_admin"/>

                <Button
                    android:id="@+id/btnGuruAdmin"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:text="Guru"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:selectableItemBackground"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:textSize="40sp"
                    android:layout_margin="20dp"
                    android:background="@drawable/bg_home_admin"/>

                <Button
                    android:id="@+id/btnSiswaAdmin"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:text="Siswa"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:textSize="40sp"
                    android:layout_margin="20dp"
                    android:background="@drawable/bg_home_admin"/>


                <Button
                    android:id="@+id/btnKelasAdmin"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:text="Kelas"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:textSize="40sp"
                    android:layout_margin="20dp"
                    android:background="@drawable/bg_home_admin"/>


            <Button
                android:id="@+id/btnMapelAdmin"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:text="MAPEL"
                android:textStyle="bold"
                android:textColor="#fff"
                android:textSize="40sp"
                android:layout_margin="20dp"
                android:background="@drawable/bg_home_admin"/>



        </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>