<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="268dp"
        android:orientation="vertical"
        android:padding="12dp">
    <androidx.cardview.widget.CardView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="4"
            app:cardBackgroundColor="@color/mssBlue"
            app:cardCornerRadius="27dp"
            android:elevation="1dp">
        <ImageView android:layout_width="match_parent" android:layout_height="match_parent"
                   android:src="@drawable/ic_school_black_24dp"/>
    </androidx.cardview.widget.CardView>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_weight="1"
                  android:layout_marginTop="7dp"
                  android:orientation="horizontal">
        <ImageView android:layout_width="43dp" android:layout_height="43dp"
                   android:scaleType="fitXY"
                   android:layout_gravity="center"
                   android:src="@drawable/ic_school_black_24dp"/>
        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="match_parent"
                      android:orientation="vertical"
                      android:paddingStart="15dp">
            <TextView android:layout_width="wrap_content" android:layout_height="0dp" android:layout_weight="1"
                      android:text="Dari:"
                      android:textSize="13sp"
                      android:autoSizeTextType="uniform"
                      android:autoSizeMinTextSize="10sp"
                      android:autoSizeMaxTextSize="14sp"
                      android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                      android:gravity="bottom"/>
            <TextView android:layout_width="wrap_content" android:layout_height="0dp" android:layout_weight="2"
                      android:gravity="center"
                      android:textSize="15sp"
                      android:autoSizeTextType="uniform"
                      android:autoSizeMinTextSize="12sp"
                      android:autoSizeMaxTextSize="15sp"
                      android:textStyle="bold"
                      android:textColor="@color/mssBlue"
                      android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                      android:text="Guru Bahasa Indonesia"/>
        </LinearLayout>
        <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
            <Button android:layout_width="110dp"
                    android:maxWidth="120dp"
                    android:minWidth="90dp"
                    android:layout_height="27dp"
                    android:minHeight="25dp"
                    android:maxHeight="35dp"
                    android:text="Tampilkan"
                    android:autoSizeStepGranularity="2dp"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="11sp"
                    android:autoSizeMaxTextSize="18sp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:textAllCaps="true"
                    style="@style/ButtonMyClass"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
